<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en">
<head>
  <title><%= @site_name %></title>
  <%= head_tags %>
  <%= stylesheet_tags %>
  <%= javascript_tags %>
  <%= yield :head %>
</head>
<body>
  <div id="common" class="shadowed">
    <div class="inner">
      <div id="search">
        <%= search_form %>
      </div>
      <ul id="common-nav">
        <%= common_nav_links %>
      </ul>
      <div class="clear"></div>
    </div>
  </div>
  <div id="nav">
    <div class="inner">
      <ul class="buttons">
        <%= nav_links %>
      </ul>
      <div class="heading">
        <h1><%= heading %></h1>
        <div class="tagline"><%= subheading %></div>
      </div>
    </div>
  </div>
  <%= notice %>
  <div id="main">
    <div class="inner">
      <% if (@sidebar = yield(:sidebar)).to_s.any? %>
        <div class="left-sidebar">
          <%= @sidebar %>
        </div>
        <div class="accommodate-left-sidebar">
          <%= yield %>
        </div>
        <div class="clear"></div>
      <% else %>
        <%= yield %>
      <% end %>
    </div>
  </div>
  <div class="inner">
    <div id="footer">
      <%= footer_content %>
    </div>
  </div>
  <%= news_js %>
  <%= analytics_js %>
  <%= menu_content %>
</body>
</html>
